BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            font_size: 48
            multiline: False
            on_text: app.handle_conversion()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    BoxLayout:
        orientation: 'vertical'
#        Button:
#            text: 'Convert miles to km'
#            on_press: app.handle_miles_to_km()
        Label:
            id: output_km
            text: app.output_km
            font_size: 48
            color: (1, 1, 0, 1)
